<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andr.androidgamesreview.MainActivity"
    android:orientation="vertical"
    android:nestedScrollingEnabled="false"
    android:background="@drawable/bktryland">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="460dp"
            android:layout_height="200dp"
            android:id="@+id/layoutLogo"
            android:background="@drawable/logo">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layoutButton"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de Jogos"
                android:id="@+id/btnGameList"
                android:layout_marginTop="12dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="btnGameList_OnClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produtoras"
                android:id="@+id/btnProdutora"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:onClick="btnProdutora_OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:id="@+id/btnCategoria"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:onClick="btnCategoria_OnClick" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
